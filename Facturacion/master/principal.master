    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/themes/bootstrap.min.css" integrity="sha256-WIcJjf4DF+5g6G6ChFG2dZcUxdZ6EDmGca5c/sd9VN0=" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript"> 

        const hdfTimeout = document.getElementById("<%=hdfTimeout.ClientID%>")
        const hdfRefresh = document.getElementById("<%=hdfRefresh.ClientID%>")

        const SessionExpireAlert = (timeout) => {
            //Convertir milisegundos a segundos 
            let secondsCountdown = timeout / 1000;
            console.log("sessionTimeout in: ", secondsCountdown)

            setInterval(() => {
                secondsCountdown = --secondsCountdown;
                console.log(secondsCountdown)
            }, 1000);

            setTimeout(() => {
                alertify.confirm(`Sesión a punto de expirar.`, `Su sesión expirará en ${secondsCountdown} segundos. ¿Desea refrescar la sesión?`,
                    () => {
                        //onok event
                        RefreshSession();
                    },
                    () => {
                        // oncancel event
                        ResetSession();
                    });
            }, timeout - 20 * 1000)

            setTimeout(() => {
                //Session EXPIRES
                ResetSession();
            }, timeout);
        }

        const RefreshSession = () => {
            hdfRefresh.value = true
            hdfTimeout.value = 45 
            __doPostBack("<%= hdfTimeout.UniqueID%>", '')
        }

        const ResetSession = () => { 
            hdfRefresh.value = false 
            __doPostBack("<%= hdfRefresh.UniqueID%>", '')
        }
    </script>
</head>

<body>
    <form id="form1" runat="server" enctype="multipart/form-data" method="post">
        <asp:ScriptManager ID="ToolkitScriptManager1" runat="server"></asp:ScriptManager>
        <asp:HiddenField  ID="hdfTimeout" runat="server"/>
        <asp:HiddenField  ID="hdfRefresh" runat="server"/>
        <header>
