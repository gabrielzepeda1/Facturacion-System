            //            $.sidr('open', 'sidr');
            //        },
            //        //Default is 75px, set to 0 for demo so any distance triggers swipe
            //        threshold: 90
            //    });

            //}

        });

        const setFloatingLabel = () => {
            document.querySelectorAll(".form-label").forEach((item) => {
                if (item.innerHTML == "Buscar" && item.parentElement && item.parentElement.tagName == "DIV") {
                    item.parentElement.classList.add("form-floating")
                }
            })
        }

        function preventBack() {
            let homeButton = document.getElementById("homeButton");
            let url = window.location.href;
            console.log(url);
            if (url.includes("Default")) {
                homeButton.addEventListener("click", function (event) {
                    event.preventDefault(); // Prevent the default behavior (e.g., postback)
                    console.log("Postback prevented. Estas en la pagina principal.");
                });
            }
        }

        function removeElements() {
            // Get the ContentPlaceHolder element by its ID
            var divUbicacion = document.getElementById("ubicacion");

            if (divUbicacion) {
                // Get all the anchor and label elements within the ContentPlaceHolder
                var elementsToRemove = divUbicacion.querySelectorAll("a, label");

                // Remove each of the found elements
                for (var i = 0; i < elementsToRemove.length; i++) {
                    var element = elementsToRemove[i];
                    element.parentNode.removeChild(element);
                }
            }
        }

        function tituloStyles() {

            console.log("ubicacionStyles() Running..")

            let element = document.getElementById("titulo");

            if (element) {

                let childrenElements = element.children

                if (childrenElements.length >= 1) {

                    childrenElements[0].classList.add("text-white", "fs-5", "text-uppercase", "py-2", "mb-0")

                    console.log("Completed!")
                }
            }

        }

        function ubicacionStyles() {
            console.log("ubicacionStyles() Running..")
            let ubicacionElement = document.getElementById("ubicacion");

            if (ubicacionElement) {
                let childrenElements = ubicacionElement.children

                if (childrenElements.length >= 3) {
                    childrenElements[0].classList.add("text-white", "fs-6", "text-decoration-none", "fw-semibold")
                    childrenElements[2].classList.add("text-white", "fs-6", "text-decoration-none", "fw-semibold")
                    console.log("Completed!")
                }
            }
        }

        function btnNewStyles() {

            let element = document.getElementById("btnNew")
            if (element) {
                element.classList.remove("new")
                element.classList.add("btn", "btn-primary", "btn-lg", "text-white")
                console.log("Completed!")

            }
        }

        function btnExportarStyles() {
            let element = document.getElementById("btnExportar")
            if (element) {
                element.classList.remove("print")
                element.classList.add("btn", "btn-success", "btn-lg", "text-white")
                console.log("Completed!")
            }
        }

        function btnGridStyles() {
            let btnEditar = document.getElementById("btnEditar");
            let btnEliminar = document.getElementById("btnEliminar");

            if (btnEditar && btnEliminar) {
                btnEditar.className = "btn btn-success"; // Set the class directly
                btnEliminar.className = "btn btn-warning"; // Set the class directly
            }
        }



        function isMobile() {
            try {
                document.createEvent("TouchEvent");
                return true;
            }
            catch (e) {
                return false;
            }
        }
    </script>

